{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        // thanks windows DOS compat
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": false,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "declaration": true,
        "types": [],
        "composite": true,
        // NodeNext requires naming all imports to `*.js`.
        "moduleResolution": "classic"
    }
}
